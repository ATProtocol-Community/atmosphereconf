---
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";
import Header from "../components/Header.astro";

interface Props {
  title?: string;
}

const {
  title = "ATmosphereConf • Global ATProto Community Conference • Vancouver, Canada, March 26th - 29th, 2026",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="h-full antialiased bg-background">
    <div class="min-h-screen flex flex-col">
      <Header transition:animate="none" />
      <main class="flex-1 flex flex-col px-2 sm:px-10 w-full max-w-4xl mx-auto">
        <slot />
      </main>
    </div>
  </body>
</html>
