---
import Layout from "../layouts/Layout.astro";
import Card from "@/components/ui/card.astro";
import SponsorsCard from "@/components/SponsorsCard.astro";
import GoodStuff from "@/assets/goodstuff-goose.png";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import { getEntry } from "astro:content";

const sponsors = await getCollection("sponsors");
const bskySponsor = await getEntry("sponsors", "bsky")!;
const agenda = await getCollection("agenda");
const speakers = await getCollection("speakers");

const agendaWithSpeakers = await Promise.all(
  agenda.map(async (item) => ({
    ...item,
    speaker: item.data.speaker ? await getEntry(item.data.speaker) : null,
  })),
);
---

<Layout title="ATmosphereConf 2026">
  <div class="space-y-10">
    <!-- Hero Section -->
    <div
      class="w-screen ml-[calc(50%-50vw)] mr-[calc(50%-50vw)] px-6 py-8 md:px-10 md:py-8 flex bg-white gap-10 items-center justify-center"
    >
      <Image
        class="h-auto w-full max-w-sm"
        src={GoodStuff}
        width={528 * 1.5}
        height={660 * 1.5}
        alt="Conference mascot Goodstuff"
      />
      <div class="flex flex-col gap-10 content-center items-center">
        <div>
          <h1
            class="text-5xl md:text-7xl font-extrabold tracking-tight text-gray-900"
          >
            ATmosphereConf
          </h1>
          <p class="mt-4 text-lg md:text-2xl text-gray-700">
            the global AT Protocol community conference
          </p>
        </div>
        <div
          class="grid grid-cols-[auto_auto] w-fit gap-x-2 text-4xl items-center col-auto"
        >
          <div class="text-gray-500 text-xl justify-self-end self-end">
            Preshow
          </div><time>March 26-27 &</time>
          <div class="text-gray-500 text-xl justify-self-end self-start">
            Conference
          </div><time>March 28-29, 2026</time>
        </div>
        <div class="flex flex-col gap-0">
          <div class="text-xl text-gray-700">
            see you @
            <a
              class="text-blue-600 underline"
              href="https://maps.app.goo.gl/nHrbn1fzRpjv1Udk9">UBC campus</a
            > ‚Äî Vancouver, BC, Canada
          </div>
        </div>
        <div class="flex items-center gap-6">
          <a class="text-4xl text-black" href="#tickets">ü™øüéüÔ∏è</a>
          <a
            class="text-2xl text-black underline underline-offset-2"
            href="#tickets"
            >Tickets now <strong class="font-bold">On Sale</strong></a
          >
          <a class="text-4xl text-black" href="#tickets">üéüÔ∏èü™ø</a>
        </div>
      </div>
    </div>

    <!-- Tickets Section -->
    <section>
      <h2 id="tickets" class="text-2xl font-bold text-gray-900 mb-4">
        Grab Your Tickets
      </h2>
      <Card class="px-6 gap-4">
        <p class="text-3xl text-pretty">
          <strong class="font-bold">ATmosphereConf</strong> is on March 26-27 & 28-29,
          2026
        </p>
        <p class="text-gray-800 max-w-[65ch]">
          Come <span class="font-semibold">two days early</span> for extended events,
          deep dives, and local activities; then gather for <span
            class="font-semibold">two full days</span
          > of conference‚Äîwith topics for everyone!
        </p>
        <p class="text-gray-800 max-w-[65ch]">
          Join 250+ in-person attendees, and 100s more online with 3 full video
          streams powered by Streamplace. Can't make it? <a
            class="underline text-blue-600"
            href="/remote">Go remote</a
          >
        </p>
        <tito-widget
          event="atmosphereconf/atmosphereconf2026"
          releases="cfllygt-phg,corporate-supporter"></tito-widget>
      </Card>
    </section>

    <!-- Workshops Section -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">
        Workshops & Activities, Thursday -&gt; Friday
      </h2>
      <Card class="px-6">
        <p class="text-gray-700">
          (Static list? Grist via Ted? we are unblocked from showing these, they
          are confirmed)
        </p>
        <h3 class="text-lg font-semibold text-gray-900">ATScience Friday</h3>
        <ul class="text-gray-800 space-y-2">
          <li>Thursday (March 26): Workshops & activities</li>
          <li>Friday (March 27): ATScience Friday</li>
        </ul>
      </Card>
    </section>

    <!-- Main Schedule Section -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">
        Main Conference Schedule
      </h2>
      <Card class="px-6">
        <p class="text-gray-700">
          (coming soon, point to <a
            class="text-blue-700 hover:underline"
            href="https://leaflet.pub/"
            target="_blank"
            rel="noopener noreferrer">Leaflet</a
          > with pre-announced speakers)
        </p>
        <div class="grid grid-cols-1">
          {
            agendaWithSpeakers.map((item) => (
              <div class="flex items-center py-4">
                <div class="w-24 flex-shrink-0 text-sm font-medium text-gray-500">
                  {item.data.time}
                </div>
                <div class="ml-4">
                  <div class="font-medium text-gray-900">{item.data.title}</div>
                  {item.speaker && (
                    <div class="text-sm text-gray-500">
                      {item.speaker.data.name}
                    </div>
                  )}
                </div>
              </div>
            ))
          }
        </div>
      </Card>
    </section>

    <!-- Sponsors Section -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Sponsors</h2>
      <Card class="px-6">
        <div></div>
        <p class="text-gray-800 font-medium">
          Thank you to Bluesky for being our title sponsor.
        </p>
        <SponsorsCard sponsor={bskySponsor} />
        <p class="text-gray-700">Other sponsors:</p>
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 items-stretch">
          {
            sponsors
              .filter((sponsor) => sponsor.data.level !== "title")
              .map((sponsor) => <SponsorsCard sponsor={sponsor} />)
          }
        </div>
      </Card>
    </section>
  </div>
  <style is:global>
    @import "https://css.tito.io/v1.1";
  </style>
  <script is:inline src="https://js.tito.io/v2/with/inline/" async></script>
</Layout>

<style is:global>
  @reference "../styles/global.css";
  tito-widget > * {
    margin: 0;
  }
  tito-widget label {
    @apply text-4xl py-2;
  }
</style>
