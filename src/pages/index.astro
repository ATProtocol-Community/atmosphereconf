---
import Layout from "../layouts/Layout.astro";
import Card from "@/components/ui/card.astro";
import { getCollection, getEntry } from "astro:content";

const agenda = await getCollection("agenda");
const speakers = await getCollection("speakers");
const sponsors = await getCollection("sponsors");

const resolvedAgenda = await Promise.all(
  agenda.map(async (item) => ({
    ...item,
    speaker: item.data.speaker ? await getEntry(item.data.speaker) : null,
  })),
);
---

<Layout title="Atmosphere Conference">
  <div class="space-y-12">
    <!-- Hero Section -->
    <Card class="w-full text-center py-12 px-6">
      <img
        src="https://do3z7e6uuakno.cloudfront.net/uploads/event/logo/1152732/5d74de6fb26f78a66e93147e5d5068e0.png"
        alt="Atmosphere Conference"
        class="h-24 mx-auto mb-6"
      />
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Atmosphere Conference
      </h1>
      <p class="text-gray-500">March 26-29, 2026 - Vancouver, BC, Canada</p>
    </Card>

    <!-- Agenda Section -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Agenda</h2>
      <Card class="px-6">
        {
          resolvedAgenda.map((item) => (
            <div class="flex items-center py-4">
              <div class="w-24 flex-shrink-0 text-sm font-medium text-gray-500">
                {item.data.time}
              </div>
              <div class="ml-4">
                <div class="font-medium text-gray-900">{item.data.title}</div>
                {item.speaker && (
                  <div class="text-sm text-gray-500">
                    {item.speaker.data.name}
                  </div>
                )}
              </div>
            </div>
          ))
        }
      </Card>
    </section>

    <!-- Speakers Section -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Speakers</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          speakers.map((speaker) => (
            <Card class="px-6">
              <div class="flex gap-4">
                <div class="w-16 h-16 rounded-full bg-gray-200 flex-shrink-0" />
                <div>
                  <div class="font-semibold text-gray-900">
                    {speaker.data.name}
                  </div>
                  <div class="text-sm text-gray-600">
                    {speaker.data.title} at {speaker.data.company}
                  </div>
                  <p class="text-sm text-gray-500 mt-2">{speaker.data.bio}</p>
                </div>
              </div>
            </Card>
          ))
        }
      </div>
    </section>

    <!-- Sponsors Section -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Sponsors</h2>
      <Card class="px-6">
        <div class="flex flex-wrap justify-center gap-8">
          {
            sponsors.map((sponsor) => (
              <div class="min-w-32 h-16 px-4 bg-gray-100 rounded flex items-center justify-center text-sm text-gray-600 font-medium whitespace-nowrap">
                {sponsor.data.name}
              </div>
            ))
          }
        </div>
      </Card>
    </section>
  </div>
</Layout>
